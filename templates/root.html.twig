<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

         {% block javascripts %}
            {{ encore_entry_script_tags('app') }}


         <script> 
            

const grid = [];


const makeGrid = () => {

    for (let i = 1; i <= 11; i++) {
        for (let j = 1; j <= 11; j++) {
        grid.push([i,j])
    }
    }
const gameZone = document.getElementById("game")

console.info('gameZone', gameZone)
    console.info('grid : ', grid)
}



makeGrid()
</script>

        {% endblock %}
    </head>
    <body>
        {% block body %} 



<img src="https://www.sciencesetavenir.fr/assets/img/2015/01/27/cover-r4x3w1000-57df431614cab-chiens-surpoids.jpg" alt=""
    style="width: 30%; height: auto; border-radius: 100%"
/>

<div>
    {% if user %}
    Bonjour {{ user.username }}
 <p> Ratio victoire/défaite : <span style="font-weight: bold; font-size: 40px">{{user.winCount}}/{{user.looseCount}}</span></p>
    {% if games %}
    <h3>Vos parties en cours : </h3>
    <div>
    {% for game in games %}

             <a href="{{ path('app_game_show', {'id': game.id}) }}">Partie n°{{game.id}}</a><br/>
            Commencée le : {{game.createdAt|date("F jS \\a\\t g:ia")}}
            
            <br/>

        {% endfor %}
<div>
    {% endif %}
    {% endif %}
 </div> 
        {% endblock %}
    </body>
</html>
